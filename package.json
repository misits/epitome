{
    "name": "epitome",
    "version": "1.0.0",
    "description": "A static site generator from markdown",
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "bin": {
        "epitome": "dist/src/cli.js"
    },
    "files": [
        "dist/src/**/*"
    ],
    "scripts": {
        "build": "ts-node src/cli.ts",
