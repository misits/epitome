        "@types/node": "^20.6.0",
        "@vitest/coverage-v8": "^3.1.1",
        "browser-sync": "^3.0.4",
        "chokidar": "^3.6.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "vitest": "^3.1.1"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/misits/epitome.git"
